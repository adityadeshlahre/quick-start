{
  "name": "quick-start",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev:web": "turbo run dev --filter=web",
    "dev:server": "turbo run dev --filter=server",
    "dev": "turbo run dev",
    "lint": "turbo lint",
    "db:generate": "cd ./packages/db/ && prisma generate --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./packages/db/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./packages/db/prisma/schema.prisma",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf ./node_modules && rm -rf ./packages/ui/node_modules && rm -rf ./apps/node_modules && rm -rf ./apps/server/node_modules && rm -rf ./apps/web/node_modules && rm -rf ./packages/db/node_modules && rm -rf ./packages/types/node_modules && rm -rf ./packages/tailwind-config/node_modules && rm -rf ./packages/eslint-config/node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.1",
    "husky": "^9.1.5",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "turbo": "^2.1.0",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint . --fix"
  }
}
