{
  "extends": "@repo/typescript-config/base.json",
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2020"],
    // "module": "Node16",
    // "moduleResolution": "Node16",
    // "target": "es2016",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    // "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
